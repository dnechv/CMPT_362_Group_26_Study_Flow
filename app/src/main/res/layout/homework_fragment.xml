<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- Contains XML for current term  -->

    <TextView
        android:id="@+id/current_term_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homework Fragment "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="start"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHW"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:color="@color/black"
        android:visibility="visible"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addHomeWorkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/add_course"
        android:contentDescription="Add Course"
        android:layout_marginBottom="100dp"
        app:backgroundTint="@color/material_dynamic_neutral90" />




</LinearLayout>